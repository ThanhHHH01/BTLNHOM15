<section class="gymroom">
    <h2>Welcome to Gym Room</h2>
    <p class="info">Enjoy the Experience</p>
    <ul class="btn-list">
      <li><h3>Sweat</h3></li>
      <li><h3>Tears</h3></li>
      <li><h3>Blood</h3></li>
    </ul>  
