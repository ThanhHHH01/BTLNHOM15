@{
    ViewData["Title"] = "Home Page";
}
<style>
    ul{
        list-style: none;
    }
    .gymroom {
    background: url(../images/anh-gym.jpg) no-repeat center;
    color: #fff;
    text-align: center;
    height: 500px;
    width: 1140px;
  }
  .gymroom h2 {
    font-weight: normal;
    padding: 50px auto;
    font-size: 56px;
    margin-bottom: 50px;
  }
  .gymroom .info {
    margin-bottom: 50px;
    font-size: 42px;
    color: yellow;
  }
  .gymroom .btn {
    margin-bottom: 50px;
    font-size: 42px;
    text-align: center;
    color: red;
  }
  .gymroom .btn-list li{
    display: inline;
  }
  .gymroom .btn-list li h3{
    margin-bottom: 50px; 
    font-size: 36px;
    color: #000;
