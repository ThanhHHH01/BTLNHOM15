@model BTLNHOM15.Models.HoiVien

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Hội viên</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="w3-card">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HoiVienID" />
            <div class="form-group">
                <label asp-for="TenHV" class="control-label"></label>
                <input asp-for="TenHV" class="form-control" />
                <span asp-validation-for="TenHV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SĐT" class="control-label"></label>
                <input asp-for="SĐT" class="form-control" />
                <span asp-validation-for="SĐT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailHV" class="control-label"></label>
                <input asp-for="EmailHV" class="form-control" />
                <span asp-validation-for="EmailHV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaGoiTap" class="control-label"></label>
                <select asp-for="MaGoiTap" class="form-control" asp-items="ViewBag.MaGoiTap"></select>
                <span asp-validation-for="MaGoiTap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngaybatdau" class="control-label"></label>
                <input asp-for="Ngaybatdau" class="form-control" />
                <span asp-validation-for="Ngaybatdau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngayketthuc" class="control-label"></label>
                <input asp-for="Ngayketthuc" class="form-control" />
                <span asp-validation-for="Ngayketthuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Trở về</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
