@model IEnumerable<BTLNHOM15.Models.ThanhToan>

@{
    ViewData["Title"] = "Index";
}

<h1>Quản lý thanh toán</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm mới</a>
</p>
<table class="w3-table-all">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoiVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoiTap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ngayban)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TinhTrang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoiVien.TenHV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoiTap.TenGoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngayban)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinhTrang.NoidungTT)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaHD" class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.MaHD" class="btn btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.MaHD" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
