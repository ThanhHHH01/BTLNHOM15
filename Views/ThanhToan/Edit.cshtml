@model BTLNHOM15.Models.ThanhToan

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thanh toán</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="w3-card">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHD" />
            <div class="form-group">
                <label asp-for="HoiVienID" class="control-label"></label>
                <select asp-for="HoiVienID" class="form-control" asp-items="ViewBag.HoiVienID"></select>
                <span asp-validation-for="HoiVienID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaGoiTap" class="control-label"></label>
                <select asp-for="MaGoiTap" class="form-control" asp-items="ViewBag.MaGoiTap"></select>
                <span asp-validation-for="MaGoiTap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngayban" class="control-label"></label>
                <input asp-for="Ngayban" class="form-control" />
                <span asp-validation-for="Ngayban" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaTinhTrang" class="control-label"></label>
                <select asp-for="MaTinhTrang" class="form-control" asp-items="ViewBag.MaTinhTrang"></select>
                <span asp-validation-for="MaTinhTrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
